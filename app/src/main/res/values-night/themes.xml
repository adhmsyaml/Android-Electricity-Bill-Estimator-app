    <style name="Theme.App.Starting" parent="Theme.ICT602MobileTechnologyAssignment" />

    <style name="CustomSeekBarStyle.Dark" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumbTint">?attr/colorSecondary</item> <item name="android:progressTint">?attr/colorSecondary</item> <item name="android:progressBackgroundTint">@color/semi_transparent_white</item>
    </style>

    <style name="Theme.ICT602MobileTechnologyAssignment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

